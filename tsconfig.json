{
  "compilerOptions": {
    "target": "ES6",                   
    "module": "ES6",                    
    "outDir": "./dist",                  // Dossier de sortie pour les fichiers JS compilés
    "rootDir": "./src",                  // Dossier racine des fichiers TS
    "strict": true,                      // Active toutes les vérifications strictes
    "esModuleInterop": true,             // Permet l'importation de modules CommonJS comme des modules ES
    "skipLibCheck": true,                // Évite la vérification des types des fichiers de déclaration
    "forceConsistentCasingInFileNames": true, // Assure la cohérence de la casse des noms de fichiers
    "sourceMap": true,                   // Génère des source maps pour le débogage
    // "moduleResolution": "node"      // Optionnel si vous utilisez des imports node style (non nécessaire ici)
  },
  "include": ["src/**/*"]                // Inclut tous les fichiers TS dans le dossier src
}